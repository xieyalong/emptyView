<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llyt_dsl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:id="@+id/v_dsl_t"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/iv_dsl_icon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_dsl_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="暂无数据"
            android:textColor="#7F7F7F"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btn_dsl"
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/ds_empty_select_btn_main"
            android:gravity="center"
            android:text="重试"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:visibility="gone"
            android:onClick="onClick"/>

        <View
            android:id="@+id/v_dsl_b"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />
    </LinearLayout>

    <com.xyl.empty.widget.LoadingLayout
        android:id="@+id/ldl_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>
