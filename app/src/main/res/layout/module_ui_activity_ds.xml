<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_empty1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="关闭空页面"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_empty2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="显示空页面"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dsl_ds"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"/>
    <!--<com.xyl.empty.widget.DSLayout-->
        <!--android:id="@+id/dsl_ds"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="1" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_0_0"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/ds_empty_select_btn_main"
                android:gravity="center"
                android:text="Loading"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/lib_pub_dimen_text_mini"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/btn_0_1"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginLeft="@dimen/lib_pub_dimen_margin"
                android:layout_weight="1"
                android:background="@drawable/ds_empty_select_btn_main"
                android:gravity="center"
                android:text="No Data"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/lib_pub_dimen_text_mini"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/btn_0_2"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginLeft="@dimen/lib_pub_dimen_margin"
                android:layout_weight="1"
                android:background="@drawable/ds_empty_select_btn_main"
                android:gravity="center"
                android:text="Net Error"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/lib_pub_dimen_text_mini"
                android:onClick="onClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lib_pub_dimen_margin"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_1_0"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/ds_empty_select_btn_main"
                android:gravity="center"
                android:text="Gif Loading"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/lib_pub_dimen_text_mini"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/btn_1_1"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginLeft="@dimen/lib_pub_dimen_margin"
                android:layout_weight="1"
                android:background="@drawable/ds_empty_select_btn_main"
                android:gravity="center"
                android:text="Gif No Data"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/lib_pub_dimen_text_mini"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/btn_1_2"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginLeft="@dimen/lib_pub_dimen_margin"
                android:layout_weight="1"
                android:background="@drawable/ds_empty_select_btn_main"
                android:gravity="center"
                android:text="Gif Net Error"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/lib_pub_dimen_text_mini"
                android:onClick="onClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lib_pub_dimen_margin"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_2_0"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/ds_empty_select_btn_main"
                android:gravity="center"
                android:text="Net Loading"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/lib_pub_dimen_text_mini"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/btn_2_1"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginLeft="@dimen/lib_pub_dimen_margin"
                android:layout_weight="1"
                android:background="@drawable/ds_empty_select_btn_main"
                android:gravity="center"
                android:text="Net No Date"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/lib_pub_dimen_text_mini"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/btn_2_2"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginLeft="@dimen/lib_pub_dimen_margin"
                android:layout_weight="1"
                android:background="@drawable/ds_empty_select_btn_main"
                android:gravity="center"
                android:text="Net Net Error"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/lib_pub_dimen_text_mini"
                android:onClick="onClick"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
